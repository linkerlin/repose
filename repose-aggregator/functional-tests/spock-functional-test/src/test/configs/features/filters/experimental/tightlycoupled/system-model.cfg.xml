<?xml version="1.0" encoding="UTF-8"?>

<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
    <repose-cluster id="repose">

        <nodes>
            <node id="config-test" hostname="localhost" http-port="${reposePort}"/>
        </nodes>

        <filters>
            <filter name="tightly-coupled-filter" />
        </filters>

        <destinations>
            <!-- using httpbin.org to guarantee a body response -->
            <endpoint id="target" protocol="http" hostname="localhost" port="${targetPort}" root-path="/" default="true"/>
        </destinations>

    </repose-cluster>
</system-model>